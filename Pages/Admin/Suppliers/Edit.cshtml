@page
@model BookStore.Pages.Suppliers.EditModel

@{
    ViewData["Title"] = "Edit Supplier";
}

<h1>Edit Supplier</h1>

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Supplier Information</h4>
        
        <hr />
        
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Supplier.SupplierId" />

            <div class="form-group">
                <label asp-for="Supplier.CompanyName" class="control-label">Company Name</label>
                <input asp-for="Supplier.CompanyName" class="form-control" />
                <span asp-validation-for="Supplier.CompanyName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Supplier.Address" class="control-label">Address</label>
                <input asp-for="Supplier.Address" class="form-control" />
                <span asp-validation-for="Supplier.Address" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Supplier.Phone" class="control-label">Phone</label>
                <input asp-for="Supplier.Phone" class="form-control" />
                <span asp-validation-for="Supplier.Phone" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Save</button>
                <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
