@page
@model BookStore.Pages.Suppliers.DeleteModel

@{
    ViewData["Title"] = "Delete Supplier";
}

<h1>Delete Supplier</h1>

<div class="card">
    <div class="card-body">
        <h3 class="card-title">Are you sure you want to delete this supplier?</h3>
        
        <hr />
        
        <dl class="row">
            <dt class="col-sm-3">Company Name:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Supplier.CompanyName)</dd>
            
            <dt class="col-sm-3">Address:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Supplier.Address)</dd>
            
            <dt class="col-sm-3">Phone:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Supplier.Phone)</dd>
        </dl>
        
        <form method="post">
            <input type="hidden" asp-for="Supplier.SupplierId" />
            
            <div class="mt-4">
                <button type="submit" class="btn btn-danger mr-2">Delete</button>
                <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>
