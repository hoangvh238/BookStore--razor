@page
@model BookStore.Pages.Suppliers.IndexModel

@{
    ViewData["Title"] = "Suppliers";
}

<h1>Supplier List</h1>

<div class="row mb-3">
    <div class="col-md-6">
        <p>
            <a asp-page="Create" class="btn btn-primary">Create New Supplier</a>
        </p>
    </div>
    <div class="col-md-6">
        <form asp-page="./Index" method="get">
            <div class="input-group">
                <input type="text" class="form-control" placeholder="Search..." name="searchString" value="@Model.CurrentFilter">
                <div class="input-group-append">
                    <button type="submit" class="btn btn-outline-secondary">Search</button>
                </div>
            </div>
        </form>
    </div>
</div>

<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">@Html.DisplayNameFor(model => model.Supplier[0].CompanyName)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.Supplier[0].Address)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.Supplier[0].Phone)</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Supplier)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.CompanyName)</td>
            <td>@Html.DisplayFor(modelItem => item.Address)</td>
            <td>@Html.DisplayFor(modelItem => item.Phone)</td>
            <td>
                <div class="btn-group" role="group" aria-label="Supplier Actions">
                    <a asp-page="./Details" asp-route-id="@item.SupplierId" class="btn btn-info">Details</a>
                    <a asp-page="./Edit" asp-route-id="@item.SupplierId" class="btn btn-primary">Edit</a>
                    <a asp-page="./Delete" asp-route-id="@item.SupplierId" class="btn btn-danger"
                       onclick="return confirm('Are you sure you want to delete this supplier?')">Delete</a>
                </div>
            </td>
        </tr>
    }
    </tbody>
</table>

@if (Model.Supplier.Count == 0)
{
    <p>No suppliers found.</p>
}

<div>
    <a asp-page="./Index">Back to List</a>
</div>
