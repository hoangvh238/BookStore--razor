@page
@model BookStore.Pages.Products.DeleteModel

@{
    ViewData["Title"] = "Delete Product";
}

<h1>Delete Product</h1>

<div>
    <h3>Are you sure you want to delete this product?</h3>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <label class="control-label">Product Name</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.ProductName)
        </dd>
        
        <dt class="col-sm-2">
            <label class="control-label">Quantity Per Unit</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.QuantityPerUnit)
        </dd>
        
        <dt class="col-sm-2">
            <label class="control-label">Unit Price</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.UnitPrice)
        </dd>
        
        <dt class="col-sm-2">
            <label class="control-label">Product Image</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.ProductImage)
        </dd>
        
        <dt class="col-sm-2">
            <label class="control-label">Category</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Category.CategoryName)
        </dd>
        
        <dt class="col-sm-2">
            <label class="control-label">Supplier</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Supplier.CompanyName)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Product.ProductId" />
        <div class="form-group">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
        </div>
    </form>
</div>
