@page
@model BookStore.Pages.Products.IndexModel

@{
    ViewData["Title"] = "Products";
}

<h1>Products</h1>

<div class="mb-3">
    <a asp-page="Create" class="btn btn-primary">Create New</a>
</div>

<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Product Name</th>
                <th scope="col">Quantity Per Unit</th>
                <th scope="col">Unit Price</th>
                <th scope="col">Product Image</th>
                <th scope="col">Category</th>
                <th scope="col">Supplier</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Product)
            {
                <tr>
                    <td>@item.ProductName</td>
                    <td>@item.QuantityPerUnit</td>
                    <td>@item.UnitPrice.ToString("C")</td>
                    <td>
                        @if (!string.IsNullOrEmpty(item.ProductImage))
                        {
                            <img src="@item.ProductImage" alt="Product Image" class="img-thumbnail" style="max-width: 100px; max-height: 100px;" />
                        }
                        else
                        {
                            <span>No image available</span>
                        }
                    </td>
                    <td>@item.Category.CategoryName</td>
                    <td>@item.Supplier.CompanyName</td>
                    <td>
                        <div class="btn-group" role="group">
                            <a asp-page="./Details" asp-route-id="@item.ProductId" class="btn btn-info btn-sm">Details</a>
                            <a asp-page="./Edit" asp-route-id="@item.ProductId" class="btn btn-warning btn-sm">Edit</a>
                            <a asp-page="./Delete" asp-route-id="@item.ProductId" class="btn btn-danger btn-sm">Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
