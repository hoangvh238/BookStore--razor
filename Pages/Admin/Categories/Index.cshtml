@page
@model BookStore.Pages.Categories.IndexModel

@{
    ViewData["Title"] = "Category Index";
}

<h1>Category Index</h1>

<p>
    <a asp-page="Create" class="btn btn-primary">Create New Category</a>
</p>

<div class="table-responsive">
    <table class="table table-striped">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Category Name</th>
                <th scope="col">Description</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Category)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.CategoryName)</td>
                    <td>@Html.DisplayFor(modelItem => item.Description)</td>
                    <td>
                        <div class="btn-group" role="group" aria-label="Category Actions">
                            <a asp-page="./Details" asp-route-id="@item.CategoryId" class="btn btn-info">Details</a>
                            <a asp-page="./Edit" asp-route-id="@item.CategoryId" class="btn btn-warning">Edit</a>
                            <a asp-page="./Delete" asp-route-id="@item.CategoryId" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this category?')">Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
